<%= turbo_stream.update("select_button_#{@selected_gift_item.id}") do %>
  <%= render partial:"gift_items/selected_button", locals: { gift_item: @selected_gift_item } %>
<% end %>

<% @unselected_gift_items.each do |gift_item| %>
  <%= turbo_stream.update("select_button_#{gift_item.id}") do %>
    <%= render partial:"gift_items/unselected_button", locals: { gift_item: gift_item } %>
  <% end %>
<% end %>