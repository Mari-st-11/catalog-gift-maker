<div class="container mx-auto px-5 py-10 text-center">
<h1 class="text-xl font-bold mb-5">ログイン</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset class="fieldset border-base-200 rounded-box w-xs border p-4 mx-auto">

    <label class="label">メールアドレス</label>
    <div class="input">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "@が含まれたアドレス" %>
    </div>

    <label class="label">パスワード</label>
    <div class="input">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上入力してください" %>
    </div>

    <button class="btn btn-neutral mt-4">
      <%= f.submit "ログイン" %>
    </button>
  </fieldset>
<% end %>

<div class="mt-10">
  <%= render "devise/shared/links" %>
</div>
