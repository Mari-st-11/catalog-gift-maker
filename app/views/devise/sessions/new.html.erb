<h2 class="text-3xl font-bold">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4">

    <label class="label">名前</label>
    <div class="input">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "名前" %>
    </div>

    <label class="label">メールアドレス</label>
    <div class="input">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "@が含まれたアドレス" %>
    </div>

    <label class="label">パスワード</label>
    <div class="input">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上入力してください" %>
    </div>

    <button class="btn btn-neutral mt-4">
      <%= f.submit "Log in" %>
    </button>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
